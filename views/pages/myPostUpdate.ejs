<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Update Your Blog Posts</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container mt-5">
    <h2 class="mb-4 text-center">Update Your Blog Posts</h2>

    <% if (posts.length === 0) { %>
      <div class="alert alert-warning text-center">
        No posts found. <a href="/posts/createPostPage" class="alert-link">Create one?</a>
      </div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle text-center">
          <thead class="table-dark">
            <tr>
              <th>Post Title</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% posts.forEach(post => { %>
              <tr>
                <td><%= post.title %></td>
                <td>
                  <a href="/api/posts/updatePostForm?id=<%= post.id %>" class="btn btn-sm btn-primary">
                     Update
                  </a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } %>

    <div class="mt-4 text-center">
      <a href="/dashboard" class="btn btn-secondary"> Back to Dashboard</a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
