<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Styled Blog App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-5">
    <h1 class="text-center mb-4">Welcome, <%= user.fullName %></h1>
    <div class="mb-4 text-end">
      <a href="/api/posts/createPostPage" class="btn btn-primary">Create New Post</a>
    </div>

    <h2>Your Blog Posts:</h2>
    <% if (posts.length === 0) { %>
      <div class="alert alert-info">No posts yet. <a href="/api/posts/createPostPage" class="alert-link">Create a new post</a></div>
    <% } else { %>
      <div class="list-group">
        <% posts.forEach(post => { %>
          <div class="list-group-item mb-3">
            <h4 class="mb-1"><%= post.title %></h4>
            <p><%= post.content %></p>
            <small class="text-muted">Author: <%= post.authorName %> | Posted on: <%= post.created_at %></small>
          </div>
        <% }) %>
      </div>
    <% } %>

    <div class="mt-4">
      <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
