 <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login | Blog App</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <style>
    #otp-section, #otp-input-section {
      display: none;
    }
  </style>
</head>
<body class="bg-light">

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">

        <div class="card shadow">
          <div class="card-body">
            <h3 class="card-title text-center mb-4">Login to Blog</h3>

            <!-- Normal Login -->
            <form action="/api/auth/login" method="POST">
              <div class="mb-3">
                <label class="form-label">Email ID</label>
                <input type="email" class="form-control" name="email" required placeholder="Enter your email id">
              </div>
              <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Enter your password">
              </div>
              <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">Login</button>
              </div>
            </form>

            <hr>

            <!-- Login with Google -->
            <div class="text-center mb-3">
              <p class="mb-2">Or login with:</p>
              <a href="/auth/google" class="btn btn-danger w-100">
                <img 
                     style="width:20px; height:20px; margin-right:10px;">
                Login withh Google
              </a>
            </div>

            <hr>

            <!-- OTP Login -->
            <p class="text-center mb-2">Or try with OTP</p>
            <div class="text-center mb-3">
              <button class="btn btn-outline-secondary" onclick="showOtpSection()">Send OTP Instead</button>
            </div>

            <!-- OTP Email Input -->
            <div id="otp-section">
              <form action="/api/auth/send-otp" method="POST">
                <div class="mb-3">
                  <input type="email" class="form-control" name="email" placeholder="Enter your email" required>
                </div>
                <div class="d-grid">
                  <button type="submit" class="btn btn-success" onclick="showOtpInputSection()">Send OTP</button>
                </div>
              </form>
            </div>

            <!-- OTP Verification -->
            <div id="otp-input-section" class="mt-3">
              <form action="/api/auth/verify-otp" method="POST">
                <input type="hidden" name="email" id="otp-email">
                <div class="mb-3">
                  <input type="text" class="form-control" name="otp" placeholder="Enter the OTP" required>
                </div>
                <div class="d-grid">
                  <button type="submit" class="btn btn-success">Verify OTP</button>
                </div>
              </form>
            </div>

            <p class="mt-4 text-center">
              Don’t have an account? <a href="/api/auth/registerPage">Register here</a>
            </p>

            <div class="text-center mt-3">
              <a href="/" class="btn btn-link">Return to Home Page</a>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>

  <script>
    function showOtpSection() {
      document.getElementById("otp-section").style.display = "block";
    }

    function showOtpInputSection() {
      setTimeout(() => {
        const emailInput = document.querySelector('#otp-section input[name="email"]').value;
        document.getElementById("otp-email").value = emailInput;
        document.getElementById("otp-input-section").style.display = "block";
      }, 500);
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
